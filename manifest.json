{
  "manifest_version": 2,
  "name": "Image Downloader",
  "author": "Suussonic",
  "version": "1.0",
  "description": "Extension pour télécharger les images en format ZIP",
  
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Image Downloader"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
